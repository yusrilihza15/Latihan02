<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btLeicester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="LEICESTER"
        app:layout_constraintStart_toStartOf="@+id/btBarcelona"
        app:layout_constraintTop_toBottomOf="@+id/btBarcelona"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btRealMadrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="58dp"
        android:text="REAL MADRID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBarcelona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="BARCELONA"
        app:layout_constraintStart_toStartOf="@+id/btRealMadrid"
        app:layout_constraintTop_toBottomOf="@+id/btRealMadrid"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btForentina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Foentina"
        app:layout_constraintEnd_toEndOf="@+id/btLeicester"
        app:layout_constraintStart_toStartOf="@+id/btLeicester"
        app:layout_constraintTop_toBottomOf="@+id/btLeicester"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>